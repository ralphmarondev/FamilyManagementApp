<Window
    x:Class="MyApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- TitleBar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>
        
        <!-- App Shell Title Bar -->
        <TitleBar
            x:Name="AppTitleBar"
            Title="Family Management App"
            Grid.Row="0"
            IsPaneToggleButtonVisible="True"
            PaneToggleRequested="TitleBar_PaneToggleRequested"
            BackRequested="TitleBar_BackRequested"
            IsBackButtonVisible="{x:Bind ContentFrame.CanGoBack, Mode=OneWay}"
            Visibility="Collapsed">

            <TitleBar.LeftHeader>
                <ImageIcon Height="16"
                           Margin="8,0,8,0"
                           Source="/Assets/GalleryIcon.ico" />
            </TitleBar.LeftHeader>

            <TitleBar.RightHeader>
                <PersonPicture Width="30" Height="30" Initials="RM" />
            </TitleBar.RightHeader>

            <TitleBar.Content>
                <AutoSuggestBox Width="320"
                                VerticalAlignment="Center"
                                PlaceholderText="Search.."
                                QueryIcon="Find" />
            </TitleBar.Content>
        </TitleBar>

        <!-- Navigation Shell -->
        <NavigationView
            x:Name="NavView"
            Grid.Row="1"
            IsPaneToggleButtonVisible="False"
            IsBackButtonVisible="Collapsed"
            AlwaysShowHeader="False"
            IsSettingsVisible="False"
            Visibility="Collapsed"
            ItemInvoked="NavView_ItemInvoked">

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Tag="Dashboard">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Home"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                
                <NavigationViewItem Content="Settings" Tag="Settings">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Setting"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            
            <!-- Footer items (bottom of nav) -->
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Logout" Tag="Logout">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Switch"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>


            <Frame x:Name="ContentFrame"/>
        </NavigationView>

        <!-- Login Frame -->
        <Frame x:Name="LoginFrame" Grid.Row="1"/>
    </Grid>
</Window>